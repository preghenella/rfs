#! /usr/bin/env bash

export RFS_SOURCE=$RFS_ROOT/SOFT/SOURCE
export RFS_INSTALL=$RFS_ROOT/SOFT/INSTALL

export HEPMC_ROOT=$RFS_INSTALL/HepMC
export PYTHIA6_ROOT=$RFS_INSTALL/Pythia6
export PYTHIA8_ROOT=$RFS_INSTALL/Pythia8
export LHAPDF_ROOT=$RFS_INSTALL/LHAPDF
export AGILE_ROOT=$RFS_INSTALL/AGILe
export SACRIFICE_ROOT=$RFS_INSTALL/Sacrifice
export DELPHES_ROOT=$RFS_INSTALL/SOFT/INSTALL/Delphes

export DYLD_LIBRARY_PATH=$HEPMC_ROOT/lib:$PYTHIA6_ROOT/lib:$PYTHIA8_ROOT/lib:$LHAPDF_ROOT/lib:$AGILE_ROOT/lib:$SACRIFICE_ROOT/lib:$DELPHES_ROOT/lib:$DYLD_LIBRARY_PATH
export LD_LIBRARY_PATH=$HEPMC_ROOT/lib:$PYTHIA6_ROOT/lib:$PYTHIA8_ROOT/lib:$LHAPDF_ROOT/lib:$AGILE_ROOT/lib:$SACRIFICE_ROOT/lib:$DELPHES_ROOT/lib:$DYLD_LIBRARY_PATH
export PATH=$AGILE_ROOT/bin:$SACRIFICE_ROOT/bin:$DELPHES_ROOT/bin:$PATH
export PYTHONPATH=$PYTHONPATH:$AGILE_ROOT/lib/python2.7/site-packages/AGILe

export PYTHIA8=$PYTHIA8_ROOT
export PYTHIA8DATA=$PYTHIA8_ROOT/share/Pythia8/xmldoc
export AGILE_GEN_PATH=$PYTHIA6_ROOT:$LHAPDF_ROOT

export PS1="[rfsEnv] \u@\h \W \$ "

bash --noprofile --norc
